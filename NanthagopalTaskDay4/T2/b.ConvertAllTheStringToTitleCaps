 // Using Arrow functions
    var titleCapse=()=>{      
    var string=["hi guvi! how are you?"];
     var a= string[0].toLowerCase().split(" ");
     for(var i = 0; i< a.length; i++){
     a[i] = a[i][0].toUpperCase() + a[i].slice(1);
     }
   console.log(a.join(" ").split(","));
   return a;
   }
   titleCapse();